{
  "name": "wavenation-stack",
  "version": "1.0.0",
  "private": true,
  "description": "WaveNation monorepo (web + CMS)",

  "workspaces": [
    "apps/*"
  ],

  "scripts": {
    "build:web": "pnpm --filter ./apps/web... build",
    "dev:web": "pnpm --filter ./apps/web... dev",

    "build:cms": "pnpm --filter ./apps/cms... build",
    "dev:cms": "pnpm --filter ./apps/cms... dev",

    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint"
  },

  "dependencies": {
    "@wavenation/cms": "workspace:*"
  },

  "engines": {
    "node": ">=20 <23",
    "pnpm": ">=9"
  },

  "pnpm": {
    "overrides": {
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "next": "14.2.25"
    }
  },

  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
