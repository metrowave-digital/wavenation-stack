{
  "compilerOptions": {
    /* =============================
       Base / Environment
    ============================= */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "noEmit": true,

    /* =============================
       Strictness
    ============================= */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* =============================
       Interop
    ============================= */
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,

    /* =============================
       Paths / Aliases
    ============================= */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@payload-config": ["./src/payload.config.ts"]
    },

    /* =============================
       Types
    ============================= */
    "types": ["node", "react", "react-dom"],

    /* =============================
       Incremental (safe)
    ============================= */
    "incremental": true,

    /* =============================
       Next.js plugin
    ============================= */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* =============================
     INCLUDED FILES
     (intentionally narrow)
  ============================= */
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],

  /* =============================
     EXCLUDED FILES
     (critical for Payload)
  ============================= */
  "exclude": [
    "node_modules",
    ".next",
    "next.config.ts",
    "src/app/(payload)/**"
  ]
}
