{
  "name": "@wavenation/cms",
  "version": "1.0.0",
  "description": "WaveNation CMS powered by Payload 3 and Next.js",
  "private": true,
  "license": "MIT",
  "type": "module",

  "scripts": {
    "dev": "NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && NODE_OPTIONS=--no-deprecation next dev",

    "build": "NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "start": "NODE_OPTIONS=--no-deprecation next start",
    "lint": "NODE_OPTIONS=--no-deprecation next lint",

    "payload": "NODE_OPTIONS=--no-deprecation payload",
    "generate:types": "NODE_OPTIONS=--no-deprecation payload generate:types",
    "generate:importmap": "NODE_OPTIONS=--no-deprecation payload generate:importmap",

    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:int": "NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "test:e2e": "NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" playwright test"
  },

  "dependencies": {
    "next": "14.2.25",
    "react": "18.2.0",
    "react-dom": "18.2.0",

    "payload": "3.69.0",
    "@payloadcms/next": "3.69.0",
    "@payloadcms/ui": "3.69.0",
    "@payloadcms/db-postgres": "3.69.0",
    "@payloadcms/richtext-lexical": "3.69.0",
    "@payloadcms/storage-s3": "3.69.0",

    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "sharp": "0.34.2"
  },

  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/react": "18.2.79",
    "@types/react-dom": "^18.2.25",

    "typescript": "5.7.3",
    "eslint": "^9.16.0",
    "eslint-config-next": "14.2.25",
    "prettier": "^3.4.2",

    "vitest": "3.2.3",
    "@vitejs/plugin-react": "4.5.2",
    "vite-tsconfig-paths": "5.1.4",

    "@testing-library/react": "16.3.0",
    "@playwright/test": "1.56.1",
    "playwright": "1.56.1",
    "playwright-core": "1.56.1",
    "jsdom": "26.1.0"
  },

  "engines": {
    "node": ">=20 <23",
    "pnpm": ">=9"
  }
}
